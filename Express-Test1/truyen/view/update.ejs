		<meta charset="utf-8">
		<title>Update Story</title>
		<link rel="stylesheet" type="text/css" href="../public/css/add.css">
		<link rel="shortcut icon" type="image/x-icon" href="../public/image/classbook.png">
	</head>
	<body>
		<div id="inner">
			<div id="logo">
	            <a href="/">Truyện CDCN</a>
	        </div><!--end logo-->

			<div id="td">
				<h1>Update Story</h1>
			</div>

			<form action="../../manager/update" method="POST" accept-charset="utf-8" enctype="application/x-www-form-urlencoded">
				<p class="ip">Name Story: <input id="ip2" type="text" name="txtName" placeholder="Name Story" value="<%- rs.Name %>" /></p> <br />
				<p class="ip">Name Author: <input type="text" name="txtAuthor" placeholder="Name Author" value="<%- rs.Author %>" /></p> <br />
				<input type="hidden" name="txtID" value="<%- rs.ID %>">
				<input id="is" type="submit" name="btnUpdate" value="Update" />
			</form>

			<div id="footer">
	            <h1>Truyện CĐCN</h1>
	            <h1>Coder: Văn Lanh và Công Luận</h1>
	        </div><!--end footer-->
		</div><!--end inner-->
	</body>
</html>